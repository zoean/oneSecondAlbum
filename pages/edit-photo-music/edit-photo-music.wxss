page{
  width:100%;
  height:100%;
  background: #F2F2F1;
  font-family: PingFangSC-Regular;
}
.edit-title-wrap{
  width:100%;
  border-top:1px solid #F2F2F1;
  background:#fff;
  height:230rpx;
  overflow: hidden;
}
.edit-title{
  width:680rpx;
  margin:0 auto;
  font-size: 20px;
  color: #9B9B9B;
  height:70rpx;
  margin-top: 20rpx;
}
.edit-input-wrap{
  width:680rpx;
  margin:0 auto;
  font-size: 20px;
  color: #333333;
  height:150rpx;
  overflow: hidden;
}
.edit-input-wrap textarea{
  width:100%;
  line-height: 50rpx;
  padding:0;
  height:150rpx;
  word-break: break-all;
}
.edit-btn{
  width:100%;
  height:120rpx;
  border-top:1px solid #f2f2f1;
  position: fixed;
  bottom: 0;
  left:0;
  display: flex;
  line-height: 140rpx;
}
.edit-add-pic{
  width:73%;
  background:#fff;
  border-radius: 0;
  text-indent: 100rpx;
  font-size: 20px;
  color: #F87512;
  position: relative;
}
.edit-save{
  width:27%;
  background: #F87512;
  font-size: 20px;
  color: #FFFFFF;
  border-radius: 0;
}
.edit-add-pic::after,.edit-save::after{
  border:none;
}
button{
  line-height: 120rpx;
}
.edit-add-pic-bg{
  width:48rpx;
  height:48rpx;
  position: absolute;
  left:162rpx;
  top:50%;
  margin-top:-24rpx;
}
.edit-inner{
  width:100%;
  height:70%;
  background:#fff;
  margin-top:20rpx;
  font-size: 20px;
  color: #333333;
}
.edit-inner scroll-view{
  width:100%;
  height:80%;
}
.edit-pic-list{
  width:670rpx;
  margin:0 auto;
  height:auto;
  flex-wrap: wrap;
  overflow: hidden;
  padding-top: 14rpx;
}
.edit-pic-item{
  width:205rpx;
  height:205rpx;
  margin-right:20rpx; 
  margin-bottom:20rpx;
  float: left;
  border-radius: 10px;
  position: relative;
}
.rightpic{
  margin-right:0;
}
.edit-pic-num{
  width:670rpx;
  margin:0 auto;
  text-align: right;
  line-height: 98rpx;
}
.edit-music-piclist{
  width:100%;
  height:100%;
  border-radius: 10px;
}
.edit-remove-pic{
  position: absolute;
  width:64rpx;
  height:64rpx;
  right:-10rpx;
  top:-10rpx;
}
.titleLimit{
  float:right;
}
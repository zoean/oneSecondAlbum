} */
.edit-photo-wrap{
  padding-bottom: 80rpx;
}
.edit-photo-item{
  width:670rpx;
  padding:20rpx 40rpx 20rpx 40rpx;
  display: flex;
  justify-content:space-between;
  border-bottom:1px solid #f2f2f1;
}
.photo-view-img{
  width:210rpx;
  height: 210rpx;
  border-radius: 24rpx;
}
.txt-order-del{
  width:420rpx;
  display: flex;
  flex-direction: column;
  flex-wrap:wrap;
}
.txt-order-del text{
  width:420rpx;
  height: 112rpx;
  margin-bottom:40rpx; 
  line-height: 48rpx;
  font-size:36rpx;
  color: #9B9B9B;
  word-break: break-all;
}
.photo-edit-bar{
  display: flex;
  justify-content:flex-end;
}
.photo-edit-bar image{
  width:64rpx;
  height:64rpx;
  margin-left:40rpx; 
}
.add-save{
  position: fixed;
  bottom: 0;
  display: flex;
  border-top:1px solid #f2f2f1;
  background: #fff;
  z-index: 3;
}
.add-img{
  width:388rpx;
  padding:34rpx 0 34rpx 162rpx;
  display: flex;
}
.add-img image{
  width: 48rpx;
  height:48rpx;
}
.add-img view{
  color: #F87512;
  padding-left: 20rpx;
}
.add-save button{
   background: #F87512;
   width: 200rpx;
   padding-top: 10rpx;
   font-size:20px;
   color: #fff; 
   border: none;
   border-radius: 0;
}
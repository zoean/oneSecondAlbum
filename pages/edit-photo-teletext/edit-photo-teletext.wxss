page{
  background: #f2f2f1;
  border-top:1px solid #F2F2F1;
  display: flex;
  flex-direction: column;  
  color: #333;
}
 .set-title{
  background: #fff;
  width:670rpx;
  height:182rpx;
  padding:40rpx;
} 
 .set-title label{
  font-size:18px;
  color: #9b9b9b;
} 
.set-title textarea{
  width: 670rpx;
  height: 150rpx;
  font-size: 36rpx;
  padding-top: 20rpx;
}
.edit-photo-list{
  margin-top:20px;
  background: #fff;
  padding:30rpx 0;
  flex-direction: column;
  position: relative;
}
.photo-count{
  font-size:20px;
  padding-right: 40rpx;
  text-align: right;
}
/* scroll-view{
  height:728rpx; 
